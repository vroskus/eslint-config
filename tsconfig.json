{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist/",
    "module": "esnext",
    "moduleResolution":"bundler",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "declaration": true,
    "target": "es6",
    "types": [
      "node"
    ],
    "strict": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}
